{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    // "baseUrl": "./",
    "rootDir": ".",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["./src/pages/*"],
      "@plugin/*": ["./src/plugin/*"],
      "@components/*": ["./src/plugin/components/*"],
      "@edu/*": ["./src/plugin/education/*"],
      "@utils/*": ["./src/plugin/utils/*"],
      "@assets/*": ["./src/plugin/assets/*"],
      "@hooks/*": ["./src/plugin/hooks/*"],
      "@sub-pag/*": ["./src/sub-pag/*"],
    },
    "jsxFragmentFactory": "React.Fragment",
    "jsxFactory": "React.createElement",
    "lib": ["ESNext.Array"]
  },
  "include": ["./src", "./types"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
