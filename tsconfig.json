{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["./src/pages/*"],
      "@plugin/*": ["./src/plugin/*"],
      "@components/*": ["./src/plugin/components/*"],
      "@edu/*": ["./src/plugin/education/*"],
      "@utils/*": ["./src/plugin/utils/*"],
      "@assets/*": ["./src/plugin/assets/*"],
      "@hooks/*": ["./src/plugin/hooks/*"]
    }
  },
  "include": ["./src", "./types", "./config"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
